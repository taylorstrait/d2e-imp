- model_class = Familiar
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @familiar.name
%p
  %strong= model_class.human_attribute_name(:speed) + ':'
  %br
  = @familiar.speed
%p
  %strong= model_class.human_attribute_name(:health) + ':'
  %br
  = @familiar.health
%p
  %strong= model_class.human_attribute_name(:defense) + ':'
  %br
  = @familiar.defense
%p
  %strong= model_class.human_attribute_name(:rule1) + ':'
  %br
  = @familiar.rule1
%p
  %strong= model_class.human_attribute_name(:rule2) + ':'
  %br
  = @familiar.rule2
%p
  %strong= model_class.human_attribute_name(:rule3) + ':'
  %br
  = @familiar.rule3
%p
  %strong= model_class.human_attribute_name(:rule4) + ':'
  %br
  = @familiar.rule4
%p
  %strong= model_class.human_attribute_name(:attack_type) + ':'
  %br
  = @familiar.attack_type
%p
  %strong= model_class.human_attribute_name(:dice) + ':'
  %br
  = @familiar.dice
%p
  %strong= model_class.human_attribute_name(:game_id) + ':'
  %br
  = @familiar.game_id
%p
  %strong= model_class.human_attribute_name(:hero_id) + ':'
  %br
  = @familiar.hero_id
%p
  %strong= model_class.human_attribute_name(:profession_id) + ':'
  %br
  = @familiar.profession_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), familiars_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_familiar_path(@familiar), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), familiar_path(@familiar), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
