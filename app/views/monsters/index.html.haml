- model_class = Monster
.page-header
  %h1= t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:trait1_id)
      %th= model_class.human_attribute_name(:trait2_id)
      %th= model_class.human_attribute_name(:num_tan2)
      %th= model_class.human_attribute_name(:num_red2)
      %th= model_class.human_attribute_name(:num_tan3)
      %th= model_class.human_attribute_name(:num_red3)
      %th= model_class.human_attribute_name(:num_tan4)
      %th= model_class.human_attribute_name(:num_red4)
      %th= model_class.human_attribute_name(:act1_tan_attack)
      %th= model_class.human_attribute_name(:act2_red_attack)
      %th= model_class.human_attribute_name(:act1_tan_speed)
      %th= model_class.human_attribute_name(:act1_red_speed)
      %th= model_class.human_attribute_name(:act2_tan_speed)
      %th= model_class.human_attribute_name(:act2_red_speed)
      %th= model_class.human_attribute_name(:act1_tan_health)
      %th= model_class.human_attribute_name(:act1_red_health)
      %th= model_class.human_attribute_name(:act2_tan_health)
      %th= model_class.human_attribute_name(:act2_red_health)
      %th= model_class.human_attribute_name(:act1_tan_defense)
      %th= model_class.human_attribute_name(:act1_red_defense)
      %th= model_class.human_attribute_name(:act2_tan_defense)
      %th= model_class.human_attribute_name(:act2_red_defense)
      %th= model_class.human_attribute_name(:role)
      %th= model_class.human_attribute_name(:attack_type)
      %th= model_class.human_attribute_name(:game_id)
      %th= model_class.human_attribute_name(:created_at)
      %th= t '.actions', :default => t("helpers.actions")
  %tbody
    - @monsters.each do |monster|
      %tr
        %td= link_to monster.id, monster_path(monster)
        %td= monster.name
        %td= monster.trait1_id
        %td= monster.trait2_id
        %td= monster.num_tan2
        %td= monster.num_red2
        %td= monster.num_tan3
        %td= monster.num_red3
        %td= monster.num_tan4
        %td= monster.num_red4
        %td= monster.act1_tan_attack
        %td= monster.act2_red_attack
        %td= monster.act1_tan_speed
        %td= monster.act1_red_speed
        %td= monster.act2_tan_speed
        %td= monster.act2_red_speed
        %td= monster.act1_tan_health
        %td= monster.act1_red_health
        %td= monster.act2_tan_health
        %td= monster.act2_red_health
        %td= monster.act1_tan_defense
        %td= monster.act1_red_defense
        %td= monster.act2_tan_defense
        %td= monster.act2_red_defense
        %td= monster.role
        %td= monster.attack_type
        %td= monster.game_id
        %td= l monster.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), |
            edit_monster_path(monster), :class => 'btn btn-mini'     |
          -#
          = link_to t('.destroy', :default => t("helpers.links.destroy")),                                               |
            monster_path(monster),                                                                                       |
            :method => :delete,                                                                                          |
            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, |
            :class => 'btn btn-mini btn-danger'                                                                          |
= link_to t('.new', :default => t("helpers.links.new")), |
  new_monster_path,                                      |
  :class => 'btn btn-primary'                            |
