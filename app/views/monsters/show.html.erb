  <dd><%= @monster.act1_tan_attack %></dd>
  <dt><strong><%= model_class.human_attribute_name(:act2_red_attack) %>:</strong></dt>
  <dd><%= @monster.act2_red_attack %></dd>
  <dt><strong><%= model_class.human_attribute_name(:act1_tan_speed) %>:</strong></dt>
