  <dt><strong><%= model_class.human_attribute_name(:act2_tan_health) %>:</strong></dt>
  <dd><%= @monster.act2_tan_health %></dd>
  <dt><strong><%= model_class.human_attribute_name(:act2_red_health) %>:</strong></dt>
