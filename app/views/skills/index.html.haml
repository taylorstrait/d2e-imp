- model_class = Skill
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:profession_id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:xp_cost)
      %th= model_class.human_attribute_name(:rule1)
      %th= model_class.human_attribute_name(:rule2)
      %th= model_class.human_attribute_name(:rule3)
      %th= model_class.human_attribute_name(:rule4)
      %th= model_class.human_attribute_name(:fatigue_cost)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @skills.each do |skill|
      %tr
        %td= link_to ability.id, ability_path(ability)
        %td= ability.profession_id
        %td= ability.name
        %td= ability.xp_cost
        %td= ability.rule1
        %td= ability.rule2
        %td= ability.rule3
        %td= ability.rule4
        %td= ability.fatigue_cost
        %td=l ability.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_ability_path(ability), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), ability_path(ability), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_ability_path, :class => 'btn btn-primary'
