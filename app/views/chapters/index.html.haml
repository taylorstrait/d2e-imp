- model_class = Chapter
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:adventure_id)
      %th= model_class.human_attribute_name(:quest_id)
      %th= model_class.human_attribute_name(:winner)
      %th= model_class.human_attribute_name(:gold_from_search_items)
      %th= model_class.human_attribute_name(:items_sold)
      %th= model_class.human_attribute_name(:items_bought)
      %th= model_class.human_attribute_name(:skills_bought)
      %th= model_class.human_attribute_name(:report)
      %th= model_class.human_attribute_name(:user_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @chapters.each do |chapter|
      %tr
        %td= link_to chapter.id, chapter_path(chapter)
        %td= chapter.adventure_id
        %td= chapter.quest_id
        %td= chapter.winner
        %td= chapter.gold_from_search_items
        %td= chapter.items_sold
        %td= chapter.items_bought
        %td= chapter.skills_bought
        %td= chapter.report
        %td= chapter.user_id
        %td=l chapter.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_chapter_path(chapter), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), chapter_path(chapter), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_chapter_path, :class => 'btn btn-primary'
