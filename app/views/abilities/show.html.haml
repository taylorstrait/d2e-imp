- model_class = Ability
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:profession_id) + ':'
  %br
  = @ability.profession_id
%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @ability.name
%p
  %strong= model_class.human_attribute_name(:xp_cost) + ':'
  %br
  = @ability.xp_cost
%p
  %strong= model_class.human_attribute_name(:rule1) + ':'
  %br
  = @ability.rule1
%p
  %strong= model_class.human_attribute_name(:rule2) + ':'
  %br
  = @ability.rule2
%p
  %strong= model_class.human_attribute_name(:rule3) + ':'
  %br
  = @ability.rule3
%p
  %strong= model_class.human_attribute_name(:rule4) + ':'
  %br
  = @ability.rule4
%p
  %strong= model_class.human_attribute_name(:fatigue_cost) + ':'
  %br
  = @ability.fatigue_cost

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), abilities_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_ability_path(@ability), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), ability_path(@ability), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
