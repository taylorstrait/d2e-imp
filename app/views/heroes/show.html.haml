- model_class = Hero
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @hero.name
%p
  %strong= model_class.human_attribute_name(:game_id) + ':'
  %br
  = @hero.game_id
%p
  %strong= model_class.human_attribute_name(:archetype) + ':'
  %br
  = @hero.archetype
%p
  %strong= model_class.human_attribute_name(:speed) + ':'
  %br
  = @hero.speed
%p
  %strong= model_class.human_attribute_name(:health) + ':'
  %br
  = @hero.health
%p
  %strong= model_class.human_attribute_name(:stamina) + ':'
  %br
  = @hero.stamina
%p
  %strong= model_class.human_attribute_name(:defense) + ':'
  %br
  = @hero.defense
%p
  %strong= model_class.human_attribute_name(:might) + ':'
  %br
  = @hero.might
%p
  %strong= model_class.human_attribute_name(:knowledge) + ':'
  %br
  = @hero.knowledge
%p
  %strong= model_class.human_attribute_name(:willpower) + ':'
  %br
  = @hero.willpower
%p
  %strong= model_class.human_attribute_name(:awareness) + ':'
  %br
  = @hero.awareness
%p
  %strong= model_class.human_attribute_name(:ability) + ':'
  %br
  = @hero.ability
%p
  %strong= model_class.human_attribute_name(:feat) + ':'
  %br
  = @hero.feat

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), heroes_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_hero_path(@hero), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), hero_path(@hero), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
