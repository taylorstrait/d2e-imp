- model_class = Profession
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:archetype_id)
      %th= model_class.human_attribute_name(:game_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @professions.each do |profession|
      %tr
        %td= link_to profession.id, profession_path(profession)
        %td= profession.name
        %td= profession.archetype_id
        %td= profession.game_id
        %td=l profession.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_profession_path(profession), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), profession_path(profession), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_profession_path, :class => 'btn btn-primary'
