- model_class = Profession
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @profession.name
%p
  %strong= model_class.human_attribute_name(:archetype_id) + ':'
  %br
  = @profession.archetype_id
%p
  %strong= model_class.human_attribute_name(:game_id) + ':'
  %br
  = @profession.game_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), professions_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_profession_path(@profession), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), profession_path(@profession), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
