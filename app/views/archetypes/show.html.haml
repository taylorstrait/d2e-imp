- model_class = Archetype
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @archetype.name
%p
  %strong= model_class.human_attribute_name(:logo_url) + ':'
  %br
  = @archetype.logo_url
%p
  %strong= model_class.human_attribute_name(:game_id) + ':'
  %br
  = @archetype.game_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), archetypes_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_archetype_path(@archetype), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), archetype_path(@archetype), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
