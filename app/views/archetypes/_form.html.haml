= form_for @archetype, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :logo_url, :class => 'control-label'
    .controls
      = f.text_field :logo_url, :class => 'text_field'
  .control-group
    = f.label :game_id, :class => 'control-label'
    .controls
      = f.number_field :game_id, :class => 'number_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), archetypes_path, :class => 'btn'
